<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/readd_bg"
    android:orientation="vertical" >
    <include 
        layout="@layout/topbar"
        android:id="@+id/topbar"/>
       <RelativeLayout
        android:id="@+id/relative_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#FFFFFF"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ico_go" />

        <ImageView
            android:id="@+id/image_head"
            android:layout_width="60dp"
	        android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_png6" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/username_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/person_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="姓名" />

        <EditText
            android:id="@+id/editname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/person_user_name"
            android:singleLine="true"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入姓名"
            android:ellipsize="end"
            android:gravity="right"
            android:ems="10" >
        </EditText>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/replaceage_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="年龄" />

        <EditText
            android:id="@+id/editage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"
            android:singleLine="true"
            android:background="@null"
            android:textSize="14sp"
            android:hint="0"
            android:ellipsize="end"
            android:gravity="right"
            android:ems="10" >

        </EditText>

     </RelativeLayout>

    <RelativeLayout
        android:id="@+id/replacesex_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:padding="8dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="性别" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_go" />

        <TextView
            android:id="@+id/textsex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imageView3"
            />

    </RelativeLayout>

      <RelativeLayout
        android:id="@+id/replaceqq_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="QQ" />

        <EditText
            android:id="@+id/editqq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"
            android:singleLine="true"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入QQ"
            android:ellipsize="end"
            android:gravity="right"
            android:ems="10" >
            </EditText>
     </RelativeLayout>
      <RelativeLayout
        android:id="@+id/replaceemail_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="邮箱" />

        <EditText
            android:id="@+id/editemaill"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"
            android:singleLine="true"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入邮箱"
            android:ellipsize="end"
            android:gravity="right"
            android:ems="10" >
            </EditText>
     </RelativeLayout>
      
     <RelativeLayout
        android:id="@+id/province_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:padding="8dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="省份" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_go" />

        <TextView
            android:id="@+id/textprovince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imageView3"
            android:text="请选择省份" />

    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/city_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:padding="8dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="城市" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_go" />

        <TextView
            android:id="@+id/textcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imageView3"
            android:text="请选择城市" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/area_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:padding="8dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="地区" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_go" />

        <TextView
            android:id="@+id/textarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imageView3"
            android:text="请选择地区" />

    </RelativeLayout>
   
      <RelativeLayout
        android:id="@+id/replaceaddress_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="地址" />

        <EditText
            android:id="@+id/editaddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"
            android:singleLine="true"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请填写地址"
            android:ellipsize="end"
            android:gravity="right"
            android:ems="10" >
            </EditText>
     </RelativeLayout>

</LinearLayout>
